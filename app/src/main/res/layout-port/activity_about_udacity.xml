<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.android.helloandroid.AboutUdacity" >

    <TextView
        android:id="@+id/discover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover Your Potential"
        android:textSize="58sp"
        android:fontFamily="@font/lasvegas"
        android:textColor="@color/colorAccent"
        android:layout_margin="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/udacity"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/logo_wide"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/discover" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/udacity"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="28dp"
        android:fontFamily="@font/lasvegas"
        android:text="2465 Latham St."
        android:textSize="34sp"
        android:textColor="@color/colorAccent"/>
    <TextView
        android:id="@+id/address2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/address"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="28dp"
        android:fontFamily="@font/lasvegas"
        android:text="Mountain View, CA 94043"
        android:textSize="34sp"
        android:textColor="@color/colorAccent"/>
    <TextView
        android:id="@+id/address3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/address2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="28dp"
        android:fontFamily="@font/lasvegas"
        android:text="650-555-5555"
        android:textSize="34sp"
        android:textColor="@color/colorAccent"/>
    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/address3"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="28dp"
        android:fontFamily="@font/lasvegas"
        android:text="START YOUR JOURNEY NOW"
        android:textSize="22sp"
        android:textColor="@color/colorAccent"/>


    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="300dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageButton
            android:id="@+id/fb"
            android:onClick="buttonFB"
            android:src="@drawable/white_fb"
            android:background="@null"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/youtube"
            android:onClick="buttonTube"
            android:src="@drawable/white_tube"
            android:background="@null"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/tweet"
            android:onClick="buttonTweet"
            android:src="@drawable/white_tweet"
            android:background="@null"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/web"
            android:onClick="buttonWWW"
            android:src="@drawable/white_www"
            android:background="@null"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:layout_weight="1" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
