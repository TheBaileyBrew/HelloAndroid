<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.android.helloandroid.AboutUdacity" >

    <LinearLayout
        android:id="@+id/LinearLayoutbottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="@dimen/padding20"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageButton
            android:contentDescription="@string/desc"
            android:id="@+id/fb"
            android:onClick="buttonFB"
            android:src="@drawable/white_fb"
            android:background="@null"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:padding="@dimen/padding15"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/youtube"
            android:onClick="buttonTube"
            android:src="@drawable/white_tube"
            android:background="@null"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:padding="@dimen/padding15"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/tweet"
            android:onClick="buttonTweet"
            android:src="@drawable/white_tweet"
            android:background="@null"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:padding="@dimen/padding15"
            android:layout_weight="1" />
        <ImageButton
            android:id="@+id/web"
            android:onClick="buttonWWW"
            android:src="@drawable/white_www"
            android:background="@null"
            android:scaleType="centerInside"
            android:layout_height="match_parent"
            android:layout_width="0dp"
            android:padding="@dimen/padding15"
            android:layout_weight="1" />
    </LinearLayout>
    <TextView
        android:id="@+id/discover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/discover"
        android:textSize="@dimen/large_font"
        android:fontFamily="@font/lasvegas"
        android:textColor="@color/colorAccent"

         />
    <ImageView
        android:id="@+id/udacity"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="@dimen/padding20"
        android:src="@drawable/logo_wide"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/discover"
        />

    <LinearLayout
        android:id="@+id/address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding20"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/udacity">

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding10"
            android:layout_marginTop="@dimen/padding5"
            android:drawableLeft="@drawable/small_loc"
            android:fontFamily="@font/lasvegas"
            android:text="   2465 Latham St."
            android:textColor="@color/colorAlmostBlack"
            android:textSize="@dimen/med_font" />

        <TextView
            android:id="@+id/address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginBottom="@dimen/padding10"
            android:layout_marginTop="@dimen/padding10"
            android:fontFamily="@font/lasvegas"
            android:text="Mountain View, CA 94043"
            android:textColor="@color/colorAlmostBlack"
            android:textSize="@dimen/med_font" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="29dp"
            android:layout_marginBottom="@dimen/padding10"
            android:layout_marginTop="@dimen/padding10"
            android:autoLink="all"
            android:drawableLeft="@drawable/small_phone"
            android:fontFamily="@font/lasvegas"
            android:text="   (650) 555-5555"
            android:textColor="@color/colorAlmostBlack"
            android:textSize="@dimen/med_font" />

        <TextView
            android:id="@+id/journey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:layout_marginTop="@dimen/padding10"
            android:fontFamily="@font/lasvegas"
            android:text="START YOUR JOURNEY NOW"
            android:textColor="@color/colorAlmostBlack"
            android:textSize="@dimen/med_font" />
    </LinearLayout>




</android.support.constraint.ConstraintLayout>
