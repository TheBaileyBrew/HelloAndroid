<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.android.helloandroid.AboutUdacity" >
    
    <TextView
        android:id="@+id/discover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover Your Potential"
        android:textSize="75sp"
        android:fontFamily="@font/lasvegas"
        android:textColor="@color/colorAccent"
        app:layout_constraintLeft_toRightOf="@id/linear_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/udacity"
        android:layout_width="wrap_content"
        android:layout_height="175dp"
        android:src="@drawable/logo_tall"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@id/discover"
        app:layout_constraintLeft_toRightOf="@id/linear_layout"
        app:layout_constraintRight_toRightOf="parent"/>

    <LinearLayout
        android:id="@+id/address_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/udacity"
        app:layout_constraintLeft_toRightOf="@id/linear_layout"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/linear_layout"
            app:layout_constraintTop_toBottomOf="@id/udacity"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:fontFamily="@font/lasvegas"
            android:text="2465  Latham  St.  "
            android:textSize="30sp"
            android:textColor="@color/colorAlmostBlack"/>
        <TextView
            android:id="@+id/address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/address"
            app:layout_constraintTop_toBottomOf="@id/udacity"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:fontFamily="@font/lasvegas"
            android:text="Mountain  View,  CA  94043"
            android:textSize="30sp"
            android:textColor="@color/colorAlmostBlack"/>
    </LinearLayout>
    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/address_box"
        app:layout_constraintLeft_toRightOf="@id/linear_layout"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="0dp"
        android:fontFamily="@font/lasvegas"
        android:text="650-555-5555"
        android:textSize="24sp"
        android:textColor="@color/colorAlmostBlack"/>


    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="100dp"
        android:layout_height="280dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">
        <ImageButton
            android:src="@drawable/white_fb"
            android:onClick="buttonFB"
            android:background="@null"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:layout_weight="1" />
        <ImageButton
            android:src="@drawable/white_tube"
            android:onClick="buttonTube"
            android:background="@null"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:layout_weight="1" />
        <ImageButton
            android:src="@drawable/white_tweet"
            android:onClick="buttonTweet"
            android:background="@null"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:layout_weight="1" />
        <ImageButton
            android:src="@drawable/white_www"
            android:onClick="buttonWWW"
            android:background="@null"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="5dp"
            android:layout_weight="1" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
